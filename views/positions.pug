extends ./layout

block title
	title Должности
block content
	div
		.container
			h2 Должности
			table.table
				thead
					tr
						th.text-center id
						th.text-center Название
						th.text-center id Отдела
				tbody
					- var abolished = positions.filter((item)=>{return item.abolished});
					- var nonAbolished = positions.filter((item)=>{return !item.abolished});
					each position in nonAbolished
						tr
							td
								a(href='/position/'+position['positionId'])=position['positionId']
							td=position['name']
							td=position['departmentId']
					if abolished.length>0
						tr
							td(colspan=2) Упраздненные
						each position in abolished
							tr
								td
									a(href='/position/'+position['positionId'])=position['positionId']
								td=position['name']
								td=position['departmentId']
